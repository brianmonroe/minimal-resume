---
import Section from "./Section.astro";
import { volunteer } from "../data/volunteer";
---

<Section id="volunteer" title="Volunteer Organizations">
  <div class="space-y-5">
    {volunteer.map((v) => (
      <article class="rounded-xl border border-zinc-200 bg-white p-5 shadow-soft print-flat">
        <div class="flex flex-col md:flex-row md:items-baseline md:justify-between gap-1">
          <h3 class="text-base md:text-lg font-semibold tracking-tight">
            {v.role} <span class="text-zinc-400 font-normal">—</span> {v.organization}
          </h3>
          <p class="text-xs md:text-sm text-zinc-500">{v.start} – {v.end}</p>
        </div>
        <ul class="mt-3 list-disc pl-5 space-y-1 text-sm text-zinc-700">
          {v.description.map((d) => <li>{d}</li>)}
        </ul>
      </article>
    ))}
  </div>
</Section>
