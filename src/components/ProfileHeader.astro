---
import { profile } from "../data/profile";
---

<header class="pt-10 pb-6 print-tight">
  <div class="container-narrow">
    <div class="flex flex-col md:flex-row md:items-center gap-6 print-gap-tight">
      <div class="flex items-center gap-4">
        <img
          src={Astro.resolve(profile.image)}
          alt={profile.name}
          width="96"
          height="96"
          class="w-20 h-20 md:w-24 md:h-24 rounded-full ring-1 ring-zinc-200 object-cover bg-white"
          loading="eager"
          decoding="async"
        />
        <div>
          <h1 class="text-2xl md:text-3xl font-bold tracking-tight">{profile.name}</h1>
          <p class="text-sm md:text-base text-zinc-600 mt-1">{profile.headline}</p>
          <p class="text-sm text-zinc-500 mt-1">{profile.location}</p>
        </div>
      </div>

      <div class="md:ml-auto flex gap-2 no-print">
        <a href="#contact" class="inline-flex items-center justify-center rounded-md border border-zinc-200 bg-white px-4 py-2 text-sm font-medium shadow-sm hover:bg-zinc-50">
          Contact
        </a>
        <button
          type="button"
          class="inline-flex items-center justify-center rounded-md bg-zinc-900 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-zinc-800"
          onclick="window.print()"
        >
          Print / Save PDF
        </button>
      </div>
    </div>

    <div class="mt-6 space-y-6 print-gap-tight">
      <!-- Summary (full width) -->
      <p class="text-sm md:text-base leading-relaxed text-zinc-800">
        {profile.summary}
      </p>
    
      <!-- Skills -->
      <div class="mt-6 print-flat">
        <h2 class="text-2xl font-semibold tracking-tight">Core skills</h2>
    
        <ul class="mt-3 flex flex-wrap gap-2">
          {profile.highlights.map((h) => (
            <li class="inline-flex items-center rounded-lg bg-zinc-900 px-3 py-1 text-xs md:text-sm font-medium text-white print:bg-transparent print:text-zinc-900 print:border print:border-zinc-400">
              {h}
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</header>
