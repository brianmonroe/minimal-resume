---
import Section from "./Section.astro";
import { cta } from "../data/cta";
---

<Section id="contact" title="Contact">
  <div class="rounded-2xl border border-zinc-200 bg-white p-6 shadow-soft print-flat">
    <h3 class="text-lg font-semibold tracking-tight no-print">{cta.heading}</h3>
    <p class="mt-2 text-sm text-zinc-700 leading-relaxed">{cta.body}</p>

    <div class="mt-4 flex flex-col sm:flex-row sm:items-center gap-3 no-print">
      <a
        href={`mailto:${cta.email}`}
        class="inline-flex items-center justify-center rounded-md bg-zinc-900 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-zinc-800"
      >
        Email me
      </a>
      <div class="flex flex-wrap gap-3 text-sm">
        {cta.links.map((l) => (
          <a class="text-zinc-900 underline underline-offset-4 hover:no-underline" href={l.href} target="_blank" rel="noreferrer">
            {l.label}
          </a>
        ))}
      </div>
    </div>

    <div class="mt-4 text-sm text-zinc-700 print-only">
      <p><strong>Email:</strong> {cta.email}</p>
      <p><strong>Phone:</strong> (419) 733-3742</p>
    </div>

    <!-- <style>
      {`
        .print-only { display: none; }
        @media print { .print-only { display: block; } }
      `}
    </style> -->
  </div>
</Section>
