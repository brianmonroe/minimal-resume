---
import Section from "./Section.astro";
import { education } from "../data/education";
---

<Section id="education" title="Education">
  <div class="space-y-5">
    {education.map((ed) => (
      <article class="rounded-xl border border-zinc-200 bg-white p-5 shadow-soft print-flat">
        <div class="flex flex-col md:flex-row md:items-baseline md:justify-between gap-1">
          <h3 class="text-base md:text-lg font-semibold tracking-tight">{ed.degree}</h3>
          {(ed.start || ed.end) ? <p class="text-xs md:text-sm text-zinc-500">{ed.start ?? ""}{ed.start && ed.end ? " â€“ " : ""}{ed.end ?? ""}</p> : null}
        </div>
        <p class="mt-1 text-sm text-zinc-700">{ed.institution}</p>
        {ed.notes?.length ? (
          <ul class="mt-3 list-disc pl-5 space-y-1 text-sm text-zinc-700">
            {ed.notes.map((n) => <li>{n}</li>)}
          </ul>
        ) : null}
      </article>
    ))}
  </div>
</Section>
